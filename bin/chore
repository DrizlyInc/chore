#!/usr/bin/env ruby

$LOAD_PATH.unshift(File.join(File.dirname(__FILE__), '..', 'lib'))
require 'chore'
require 'chore/cli'

trap "INT" do
  Chore::CLI.instance.shutdown
end

begin
  cli = Chore::CLI.instance
  cli.parse(ARGV)
  cli.run!
rescue => e
  raise e if $DEBUG
  STDERR.puts e.message
  STDERR.puts e.backtrace.join("\n")
  exit 1
end
 

