#!/usr/bin/env ruby

$LOAD_PATH.unshift(File.join(File.dirname(__FILE__), '..', 'lib'))
require 'chore'
require 'chore/cli'

["INT","TERM","QUIT"].each do |sig|
  trap sig do
    Chore::CLI.instance.shutdown
  end
end

trap "USR1" do
  Chore.reopen_logs
end

begin
  cli = Chore::CLI.instance
  cli.run!(ARGV)
rescue => e
  raise e if $DEBUG
  STDERR.puts e.message
  STDERR.puts e.backtrace.join("\n")
  exit 1
end
 

